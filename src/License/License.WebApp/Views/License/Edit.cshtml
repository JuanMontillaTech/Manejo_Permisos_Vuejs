
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="app">

    <div class="card">
        <div class="card-header text-white bg-success">
            Crear un nuevo permiso


        </div>
        <div class="card-body">
         
            <p v-if="errors.length">
                <b>Por favor, corrija el(los) siguiente(s) error(es):</b>
                <ul>
                    <li v-for="error in errors">{{ error }}</li>
                </ul>
            </p>
            <div class="form-group">
                <label for="txtFullName">Nombres</label>
                <input type="text" v-model="License[0].fullname" class="form-control">
            </div>
            <div class="form-group">
                <label for="txtApellidos">Apellidos</label>
                <input type="text" class="form-control" v-model="License[0].surnames">
            </div>
            <div class="form-group ">
                <label for="listLicense">Tipo de Licencia</label>
                <select class="form-control" v-model="License[0].licensesType">
                    <template v-for="(TypeLicense, index) in ListTypeLicense">
                        <option :value="TypeLicense.id">{{TypeLicense.name}}</option>
                    </template>
                </select>
            </div>
            <div class="form-group col-3">
                <label for="txtFecha">Fecha</label>

                <vuejs-datepicker class="form-control" v-model="License[0].licensesDate" class="{'bg-red':bootstrapStyling, 'bg-white':!bootstrapStyling}"></vuejs-datepicker>
            </div>
            <button class="btn btn-primary" v-on:click="SaveLicence">Guardar</button>
        </div>
        <div class="card-footer text-muted">
            <div class="form-group">

                <a class="btn btn-light" asp-action="Index">Volver al listado</a>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script src="~/js/Vue/LicencesEdit.Vue.js"></script>


}

